        "deploy": "npm run prettier && npm version patch --force && npx unbuild && npm publish",
        "prettier": "npx prettier . --write --config src/index.js"
    },
    "dependencies": {
        "prettier": "^3.4.1",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-packagejson": "^2.5.6",
        "prettier-plugin-tailwindcss": "^0.6.9"
    },
    "devDependencies": {
        "unbuild": "^2.0.0"
    }
}
