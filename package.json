    "license": "MIT",
    "author": {
        "name": "Micha≈Ç Pietrucha",
        "email": "michal.pietrucha@off-site.pl"
    },
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "files": [
        "dist"
    ],
